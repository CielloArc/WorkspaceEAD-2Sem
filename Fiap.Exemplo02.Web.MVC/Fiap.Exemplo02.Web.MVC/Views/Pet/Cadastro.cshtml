@model Fiap.Exemplo02.Web.MVC.Models.Pet

@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro de Pet</h2>

@Banana.Message(TempData["msg"] as string)

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Especie)
        @Html.DropDownListFor(p => p.Especie, ViewBag.opcoes as SelectList, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Nome)
        @Html.TextBoxFor(pet => pet.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Descricao)
        @Html.TextBoxFor(p => p.Descricao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.DataNascimento)
        @Html.TextBoxFor(pet => pet.DataNascimento, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Castrado)
        @Html.CheckBoxFor(p => p.Castrado)
    </div>

    @Banana.Submit("Cadastrar")
}

