@model Fiap.Exemplo02.Web.MVC.Models.Produto

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Produto</h2>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
        @ViewBag.mensagem
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Nome)
        @Html.TextBoxFor(p => p.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Preco)
        @Html.TextBoxFor(p => p.Preco, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Descricao)
        @Html.TextBoxFor(p => p.Descricao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.DataFabricacao)
        @Html.TextBoxFor(p => p.DataFabricacao, new {@class =  "form-control" })
    </div>
    <input type="submit" class="btn btn-default" />
}