@model List<Fiap.Revisao.Models.Cliente>
@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Acoes</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>
                    @Html.ActionLink(" ", "Alterar", new { id = item.ClienteId }, new {@class = "glyphicon glyphicon-pencil btn btn-xs btn-primary" } )
                    @Html.ActionLink(" ", "Remover", new {id = item.ClienteId }, new { @class = "glyphicon glyphicon-trash btn btn-xs btn-danger" })
                </td>
            </tr>
        }        
    </tbody>

</table>


