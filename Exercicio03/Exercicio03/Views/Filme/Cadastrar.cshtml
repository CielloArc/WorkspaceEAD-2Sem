@model Exercicio03.Models.Filme
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>
@if (TempData["msg"] != null)
{
    <div class="alert alert-info">
        @TempData["msg"];
    </div>
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Filme</legend>
        <div class="form-group">
            @Html.LabelFor(f => f.Titulo)
            @Html.TextBoxFor(f =>f.Titulo, new { @class = "form-control" })
            @Html.ValidationMessageFor(f => f.Titulo,null, new { @class = "text text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(f => f.Genero)
            @Html.TextBoxFor(f => f.Genero, new { @class = "form-control" })
            @Html.ValidationMessageFor(f => f.Genero, null, new { @class = "text text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(f => f.Duracao)
            @Html.TextBoxFor(f => f.Duracao, new { @class = "form-control" })
            @Html.ValidationMessageFor(f => f.Duracao, null, new { @class = "text text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(f => f.DataLancamento)
            @Html.TextBoxFor(f => f.DataLancamento, new { @class = "form-control" })
            @Html.ValidationMessageFor(f => f.DataLancamento, null, new { @class = "text text-danger" })
        </div>
    </fieldset>
    <fieldset>
        <legend>Produtora</legend>
        <div class="form-group">
            @Html.LabelFor(f => f.Produtora.Nome)
            @Html.TextBoxFor(f => f.Produtora.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(f => f.Produtora.Nome, null, new { @class = "text text-danger" })
        </div>
    </fieldset>

    <input type="submit" class="btn btn-primary" />
}